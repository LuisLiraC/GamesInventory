@using Entities
@using Business

@inject NavigationManager NavManager

<div>
    <EditForm Model="@oWarehouse">
        <div class="form-group">
            <label>Name:</label>
            <InputText @bind-Value="@oWarehouse.WarehouseName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Address</label>
            <InputText @bind-Value="@oWarehouse.WarehouseAddress" class="form-control" />
        </div>
        <input type="button" value="Save Warehouse" @onclick="SaveWarehouse" class="btn btn-primary" />
    </EditForm>
</div>

@code {
    WarehouseEntity oWarehouse = new WarehouseEntity();

    private void SaveWarehouse()
    {
        oWarehouse.WarehouseId = Guid.NewGuid().ToString();
        B_Warehouse.CreateWarehouse(oWarehouse);
        NavManager.NavigateTo("warehouses/list");
    }
}
